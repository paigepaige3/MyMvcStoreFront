@{
    ViewData["Title"] = "Store";
}

<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('assets/img/page-header.jpg');">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>Our Shop</h2>
                    <p>Our crisp Tees are made out of the finest ingredients! Scrumptious designs with flair. We also carry plain and dependable shirts that have no logos or designs for a more simple and classic poise. </p>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <div class="container">
            <ol>
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li>Shop</li>
            </ol>
        </div>
    </nav>
</div><!-- End Breadcrumbs -->


<!-- ======= Horizontal Pricing Section ======= -->
<section id="horizontal-pricing" class="horizontal-pricing pt-0">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <span>Store</span>
            <h2>Store</h2>
        </div>

        <div class="row gy-4 pricing-item" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-3 d-flex align-items-center justify-content-center">
                    <img src="~/assets/img/OurTeam.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-3 d-flex align-items-center justify-content-center">
                <h4><sup>$</sup>30<span></span></h4>
            </div>
            <div class="col-lg-3 d-flex align-items-center justify-content-center">
                <ul>
                    <li><i class="bi bi-check"></i>Soft Cotton</li>
                    <li>Soft White Cotton Tee with french seams</li>
                </ul>
            </div>
            <div class="col-lg-3 d-flex align-items-center justify-content-center">
                <div class="text-center"><a href="#" class="buy-btn">Add to Cart</a></div>
            </div>
        </div><!-- End Pricing Item -->














    </div>
</section><!-- End Horizontal Pricing Section -->
